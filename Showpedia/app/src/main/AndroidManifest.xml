<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lorena.showpedia">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Showpedia">
        <activity android:name="com.lorena.showpedia.MovieActivityDetail" android:parentActivityName="com.lorena.showpedia.MainActivity"></activity>
        <activity android:name="com.lorena.showpedia.TvActivityDetail" android:parentActivityName="com.lorena.showpedia.MainActivity"/>
        <activity android:name="com.lorena.showpedia.MainActivity" android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>